@require "../node_modules/normalize.css/normalize.css"
@require "./fonts.styl"

$primary = #DFE1E8
$danger = #A90015
$bg1 = #16232A
$bg2 = #1A2B34
$bg3 = #465B66

$purple = #C792C7
$blue = #6297D0
$green = #97C990
$orange = #FD9148
$red = #F05D61

html, body
  margin 0
  padding 0
  height 100%
  display grid
  background black
  color $primary
  font-family Iosevka, monospace
  font-size 12px

#canvas
  margin auto

#root
  position absolute
  width 645px
  height 405px
  top 50%
  right 50%
  bottom 50%
  left 50%
  margin -202.5px -322.5px -202.5px -322.5px
  overflow hidden
  text-shadow 0px 1px 2px black

.crosshair
  position absolute
  top 50%
  right 50%
  bottom 50%
  left 50%
  margin -1.5px
  border 1px solid white
  border-radius 20px
  box-shadow 0px 0px 1px black
  background-color white

.physicsmode
  position absolute
  left 10px
  bottom 60px

.constraints
  position absolute
  left 60px
  bottom 0px
